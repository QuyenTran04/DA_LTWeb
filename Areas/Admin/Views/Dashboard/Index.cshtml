@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />

<h2 class="mb-4 fw-bold text-primary text-center" style="font-family:'Montserrat',Arial,sans-serif;">Chào mừng, Quản trị viên</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col">
        <div class="card dashboard-card h-100">
            <div class="card-body text-center">
                <div class="dashboard-icon-bg">
                    <i class="bi bi-hourglass-split fs-1 text-warning"></i>
                </div>
                <div class="dashboard-card-title">Yêu cầu chờ phê duyệt</div>
                <div class="dashboard-card-value">@ViewBag.TotalPending</div>
                <a asp-area="Admin" asp-controller="HopDong" asp-action="ChoPheDuyet" class="dashboard-btn btn btn-light btn-sm">
                    Phê duyệt hợp đồng
                </a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card dashboard-card h-100">
            <div class="card-body text-center">
                <div class="dashboard-icon-bg info">
                    <i class="bi bi-person-check fs-1 text-info"></i>
                </div>
                <div class="dashboard-card-title">Tài khoản khách hàng</div>
                <div class="dashboard-card-value">@ViewBag.TotalCustomers</div>
                <a asp-area="Admin" asp-controller="Account" asp-action="Index" class="dashboard-btn btn btn-outline-info">
                    Quản lý tài khoản
                </a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card dashboard-card h-100">
            <div class="card-body text-center">
                <div class="dashboard-icon-bg success">
                    <i class="bi bi-file-earmark-text fs-1 text-success"></i>
                </div>
                <div class="dashboard-card-title">Tổng hợp đồng vay</div>
                <div class="dashboard-card-value">@ViewBag.TotalContracts</div>
                <a asp-area="Admin" asp-controller="HopDong" asp-action="TongHopDong" class="dashboard-btn btn btn-outline-success">
                    Xem tất cả hợp đồng
                </a>
            </div>
        </div>
    </div>
</div>

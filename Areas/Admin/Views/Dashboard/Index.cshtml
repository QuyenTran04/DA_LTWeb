@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4 fw-bold text-primary text-center">Chào mừng, Quản trị viên</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col">
        <div class="card border-0 shadow-lg h-100">
            <div class="card-body text-center">
                <i class="bi bi-hourglass-split fs-1 text-warning"></i>
                <h5 class="card-title mt-2">Yêu cầu chờ phê duyệt</h5>
                <p class="fs-3 fw-semibold">@ViewBag.TotalPending</p>
                <a asp-area="Admin" asp-controller="HopDong" asp-action="ChoPheDuyet" class="btn btn-light btn-sm mt-2">
                    Phê duyệt hợp đồng
                </a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card border-0 shadow-lg h-100">
            <div class="card-body text-center">
                <i class="bi bi-person-check fs-1 text-info"></i>
                <h5 class="card-title mt-2">Tài khoản khách hàng</h5>
                <p class="fs-3 fw-semibold">@ViewBag.TotalCustomers</p>
                <a asp-area="Admin" asp-controller="KhachHang" asp-action="Index" class="btn btn-outline-info">Quản lý tài khoản</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card border-0 shadow-lg h-100">
            <div class="card-body text-center">
                <i class="bi bi-file-earmark-text fs-1 text-success"></i>
                <h5 class="card-title mt-2">Tổng hợp đồng vay</h5>
                <p class="fs-3 fw-semibold">@ViewBag.TotalContracts</p>
                <a asp-area="Admin" asp-controller="HopDong" asp-action="Index" class="btn btn-outline-success">Xem tất cả hợp đồng</a>
            </div>
        </div>
    </div>
</div>

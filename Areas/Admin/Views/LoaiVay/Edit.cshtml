@model VAYTIEN.Models.LoaiVay

@{
    ViewData["Title"] = "Chỉnh sửa Loại Vay";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h2 class="text-center mb-4">@ViewData["Title"]</h2>
        <div class="card p-4 shadow-sm">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Input ẩn để gửi MaLoaiVay lên server -->
                <input type="hidden" asp-for="MaLoaiVay" />

                <div class="mb-3">
                    <label asp-for="TenLoaiVay" class="form-label">Tên Loại Vay</label>
                    <input asp-for="TenLoaiVay" class="form-control" />
                    <span asp-validation-for="TenLoaiVay" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="LaiSuat" class="form-label">Lãi Suất (% / năm)</label>
                        <input asp-for="LaiSuat" type="number" step="0.1" class="form-control" />
                        <span asp-validation-for="LaiSuat" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="KyHan" class="form-label">Kỳ Hạn Tối Đa (tháng)</label>
                        <input asp-for="KyHan" type="number" class="form-control" />
                        <span asp-validation-for="KyHan" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="GhiChu" class="form-label">Ghi Chú</label>
                    <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="GhiChu" class="text-danger"></span>
                </div>

                <div class="mt-3 text-center">
                    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

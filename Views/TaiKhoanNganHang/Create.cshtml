@model VAYTIEN.Models.TaiKhoanNganHang
@{
    ViewData["Title"] = "Tạo thẻ ngân hàng";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="SoTaiKhoan" class="form-label">Số tài khoản</label>
        <input asp-for="SoTaiKhoan" class="form-control" />
        <span asp-validation-for="SoTaiKhoan" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LoaiTaiKhoan" class="form-label">Loại tài khoản</label>
        <input asp-for="LoaiTaiKhoan" class="form-control" />
        <span asp-validation-for="LoaiTaiKhoan" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SoDu" class="form-label">Số dư ban đầu</label>
        <input asp-for="SoDu" class="form-control" />
        <span asp-validation-for="SoDu" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TrangThai" class="form-label">Trạng thái</label>
        <input asp-for="TrangThai" class="form-control" value="Hoạt động" />
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Tạo thẻ</button>
</form>
